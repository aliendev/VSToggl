# EditorConfig helps maintain consistent coding styles
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{cs,csx}]
indent_size = 4
dotnet_sort_system_directives_first = true

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.xml]
indent_size = 2